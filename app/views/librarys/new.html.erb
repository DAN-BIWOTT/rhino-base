<%= render 'dashboards/hNavBar' %>
<%= render 'dashboards/vNavBar' %>
<!-- start page content -->
			<div class="page-content-wrapper">
				<div class="page-content">
					<div class="page-bar">
						<div class="page-title-breadcrumb">
							<div class=" pull-left">
								<div class="page-title">Add Library Assets</div>
							</div>
							<ol class="breadcrumb page-breadcrumb pull-right">
								<li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
								</li>
								<li><a class="parent-item" href="">Library</a>&nbsp;<i class="fa fa-angle-right"></i>
								</li>
								<li class="active">Add Library Assets</li>
							</ol>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<div class="card card-box">
								<div class="card-head">
									<header>Add Library Assets</header>
									
								</div>
								<div class="card-body" id="bar-parent">
					<%= form_with scope: :library, url: librarys_path,local: true do |form| %>
									<form action="#" id="form_sample_1" class="form-horizontal">
										<div class="form-body">
											<div class="form-group row">
												<label class="control-label col-md-3">Title
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

											<%= form.text_field :bookTitle,:class=>'form-control form-control input-height',:placeholder=>'enter title' %>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Subject <span class="required"> * </span>
												</label>
												<div class="col-md-5">
<%= form.select(:Subject,options_for_select([['Math','Math'],['Science','Science'],['Social Studies','Social Studies'],['computer','computer'],['English','English'],['CRE','CRE']]),:class=>'form-control input-height')  %>

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Auther Name
												</label>
												<div class="col-md-5">

													<%= form.text_field :Author,:class=>'form-control input-height',:placeholder=>'enter auther name' %>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Publisher
												</label>
												<div class="col-md-5">
													<%= form.text_field :Publisher,:class=>'form-control input-height',:placeholder=>'enter publisher name' %>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Department <span class="required"> * </span>
												</label>
												<div class="col-md-5">

												<%= form.select(:Department,options_for_select([['Medicine','Medicine'],['Chemistry','Chemistry'],['Geography','Geography']]),:class => 'form-control input-height') %>	
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Asset Type <span class="required"> * </span>
												</label>
												<div class="col-md-5">

													<%= form.select(:AssetType,options_for_select([['DVD','DVD'],['CD','CD'],['News Paper','News Paper']]),:class=>'form-control input-height') %>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Purchase Date
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">
													<div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2"
													 data-link-format="yyyy-mm-dd">

														<%= form.text_field :purchaseDate,:class=>'form-control input-height',size:'16',:placeholder=>'Purchase Date' %>

														<span class="input-group-addon"><span class="fa fa-calendar"></span></span>
													</div>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Price
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

											<%= form.number_field :Price,:class=>'form-control input-height',:placeholder=>'enter title' %>

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Status <span class="required"> * </span>
												</label>
												<div class="col-md-5">

												<%= form.select(:Status,options_for_select([['instock','instock'],['outOfStock','outOfStock'],['repare','repare']]),:class=>'form-control input-height') %>	
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Asset Details
												</label>
												<div class="col-md-5">
												<%= form.text_area :assetDetails,:class=>'form-control-textarea',:placeholder=>'asset details',rows:'5' %>	
												</div>
											</div>
											<div class="form-actions">
												<div class="row">
													<div class="offset-md-3 col-md-9">

													<%= form.submit 'Submit',:class=>'btn btn-info m-r-20' %>
													<%= link_to 'back',librarys_path,:class=>'btn btn-default' %>
													</div>
												</div>
											</div>
										</div>
									</form>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- end page content -->
<%= render 'dashboards/chat' %>
<%= render 'dashboards/footer' %>	