<%= form_with(model: staff, local: true) do |form| %>
  <% if staff.errors.any? %>
 
               
                    <form class="form-horizontal">
                      <div class="form-body">
                        <%= staff.errors.full_messages.each do |message| %>
                          <li><% message %></li>
                        <% end %>
                         <% end %>
                        <div class="form-group row">
                          <label class="control-label col-md-3">First Name
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">

                          <%= form.text_area :firstName,:placeholder=>'enter first name',:class=>'form-control input-height' %>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Last Name
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">

                            <%= form.text_area :lastName,:placeholder=>'enter last name',:class=>'form-control input-height' %> 
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Email
                          </label>
                          <div class="col-md-5">
                            <div class="input-group">
                              <span class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                              </span>

                    <%= form.text_field :email,:class=>'form-control input-height', :placeholder=>'Email Address' %>
                            </div>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Joining Date
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">
                            <div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2"
                             data-link-format="yyyy-mm-dd">
                              
                              <%= form.text_field :joinDate,:class=>'form-control input-height',:id=>'date',:placeholder=>'Joining Date' %>
                              <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                            </div>
                            <input type="hidden" id="dtp_input2" value="" />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Designation
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">
                              <%= form.text_field :designation,:placeholder=>'enter your designation',:class=>'form-control input-height' %>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Departments
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">
                      <%= form.select(:department,options_for_select([['Library','Library'],['>Administration','>Administration'],['Transport','Transport'],['Laboratory','Laboratory']]),:class=>'form-control input-height') %>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Gender
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">
  <%=form.select(:gender,options_for_select([['Male','Male'],['Female','Female']]),:class=>'form-control input-height')  %>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Mobile No.
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">

    <%= form.number_field :phoneNumber,:placeholder=>'mobile number',:class=>'form-control input-height' %>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Date Of Birth
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">
                            <div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input5"
                             data-link-format="yyyy-mm-dd">

                  <%= form.text_field :birthDate,:class=>'form-control input-height',size:'16',:placeholder=>'date of Birth',:id=>'dateOfBirth' %>
                              <span class="input-group-addon"><span class="fa fa-calendar"></span></span>
                            </div>
                            <input type="hidden" id="dtp_input5" value="" />
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Address
                            <span class="required"> * </span>
                          </label>
                          <div class="col-md-5">

                            <%= form.text_area :address,:placeholder=>'address',:class=>'form-control-textarea',rows:'5' %> 
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Profile Picture
                          </label>
                          <div class="compose-editor">

                         <%= form.file_field :image,:class=>'default' %>
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="control-label col-md-3">Education
                          </label>
                          <div class="col-md-5">

                            <%= form.text_area :education,:class=>'form-control-textarea',:placeholder=>'Education',rows:'5' %>
                          </div>
                        </div>
                        <div class="form-actions">
                          <div class="row">
                            <div class="offset-md-3 col-md-9">
              <%= form.submit(:class=>'btn btn-info m-r-20') %>
              <%= link_to 'Cancel',staffs_path,:class=>'btn btn-default' %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </form>
                   
<% end %>
