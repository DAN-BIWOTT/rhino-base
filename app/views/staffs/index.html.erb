													<div class="card-body ">
										<div class="row">
											<div class="col-md-6 col-sm-6 col-6">
										<div class="btn-group">
						<%= link_to new_staff_url,:id=>'addRow',:class=>'btn btn-info' do %>
						<%= content_tag :i,"Add New",:class=>'fa fa-plus' %>
						<% end %>
										</div>
												</div>
															<div class="col-md-6 col-sm-6 col-6">
