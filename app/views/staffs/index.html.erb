																		<li>
																			<a href="javascript:;">
																				<i class="fa fa-file-pdf-o"></i> Save as PDF </a>
																		</li>
																		<li>
																			<a href="javascript:;">
																				<i class="fa fa-file-excel-o"></i> Export to Excel </a>
																		</li>
																	</ul>
																</div>
															</div>
														</div>
														<div class="table-scrollable">
															<table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle"
															 id="example4">
																<thead>
																	<tr>
																		<th></th>
																		<th> Name </th>
																		<th> Designation </th>
																		<th> Mobile </th>
																		<th> Email </th>
																		<th> Address </th>
																		<th>Joining Date</th>
																		<th> Action </th>
																	</tr>
																</thead>
																<tbody>
													<% @staffs.each do |staff| %>
													<% if staff.user == current_user %>
												<tr class="odd gradeX">
											        <td class="patient-img">
												<% if staff.image.attached? %>
													<%= image_tag(staff.image) %>
												<% else %>
													<%= image_tag('std10.jpg') %>
												<% end %>
														</td>
															
							<td class="center"><%= staff.firstName+ '' +staff.lastName %></td>
							<td><a href="tel:<%= staff.phoneNumber %>">
								<%= staff.phoneNumber %> </a></td>
							<td><a href="mailto:<%= staff.email %>">
								<%= staff.email %> </a></td>
							<td class="center"><%= staff.education %></td>
							<td class="center">22 Feb 2000</td>
							<td>
										<%= link_to edit_staff_path(staff),:class=>'btn btn-primary btn-xs' do%>
											<%= content_tag :i,"",:class=>'fa fa-pencil' %>

										<% end %>
											<%= link_to( staff,:class=>'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' }) do %>
											<%= content_tag :i,"",:class=>'fa fa-trash-o' %>
											<% end -%>
														<% end %>
																		</td>
																	</tr>
																	<% end %>
																</tbody>
															</table>
														</div>
													</div>
												</div>
											</div>
										</div>
