<%= render 'dashboards/hNavBar' %>
<%= render 'dashboards/vNavBar' %>
<!-- start page content -->
			<div class="page-content-wrapper">
				<div class="page-content">
					<div class="page-bar">
						<div class="page-title-breadcrumb">
							<div class=" pull-left">
								<div class="page-title">Add Department</div>
							</div>
							<ol class="breadcrumb page-breadcrumb pull-right">
								<li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
								</li>
								<li><a class="parent-item" href="">Department</a>&nbsp;<i class="fa fa-angle-right"></i>
								</li>
								<li class="active">Add Department</li>
							</ol>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<div class="card card-box">
								<div class="card-head">
									<header>Add Department</header>
								</div>
								<div class="card-body" id="bar-parent">
				<%= form_with model: @department, local: true do |form| %>
									<form action="#" id="form_sample_1" class="form-horizontal">
										<div class="form-body">
											<div class="form-group row">
												<label class="control-label col-md-3">Department Name
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

												<%= form.text_field :depName, :placeholder=>'enter department name',:class=>'form-control input-height' %>

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Head Of Department
												</label>
												<div class="col-md-5">

												<%= form.text_field :depHead, :placeholder=>'enter HOD name',:class=>'form-control input-height' %>
											</div>
										</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Department Start Date
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">
													<div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2"
													 data-link-format="yyyy-mm-dd">

									<%= form.text_field :depStartDate,:class=>'form-control input-height',size:'10',:placeholder=>'department start date' %>

														<span class="input-group-addon"><span class="fa fa-calendar"></span></span>
													</div>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Student Capacity
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

										<%= form.number_field :depStdCapacity,:placeholder=>'enter title',:class=>'form-control input-height' %>
													 </div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Department Details
												</label>
												<div class="col-md-5">

											<%= form.text_area :depDescription,:placeholder=>'department details',:class=>'form-control-textarea',rows:'5' %>		

												</div>
											</div>
											<div class="form-actions">
												<div class="row">
													<div class="offset-md-3 col-md-9">

													<%= form.submit 'Submit',:class =>'btn btn-info m-r-20' %>
														
												<%= link_to 'Cancel',departments_path,:class=>'btn btn-default' %>
													
													</div>
												</div>
											</div>
										</div>
									</form>
									<% end %>
								</div>
							</div>
						</div>
					</div>
<%= render 'dashboards/chat' %>
<%= render 'dashboards/footer' %>