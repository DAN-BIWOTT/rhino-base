<%= render 'dashboards/hNavBar' %>
<%= render 'dashboards/vNavBar' %>
<%= form_with(model: exam, local: true) do |form| %>


  <!-- start page content -->
  <div class="page-content-wrapper">
    <div class="page-content">
      <div class="page-bar">
        <div class="page-title-breadcrumb">
          <div class=" pull-left">
            <div class="page-title">Exams per class</div>
          </div>
          <ol class="breadcrumb page-breadcrumb pull-right">
            <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
            </li>
            <li><a class="parent-item" href="">Exams</a>&nbsp;<i class="fa fa-angle-right"></i>
            </li>
            <li class="active">Add results</li>
          </ol>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="tabbable-line">
            <ul class="nav customtab nav-tabs" role="tablist">
              <li class="nav-item"><a href="#tab1" class="nav-link active" data-toggle="tab">List View</a></li>
              <li class="nav-item"><a href="#tab2" class="nav-link" data-toggle="tab">Grid View</a></li>
            </ul>
            <div class="tab-content">
              <div class="tab-pane active fontawesome-demo" id="tab1">
                <div class="row">
                  <div class="col-md-12">
                    <div class="card card-box">
                      <div class="card-head">
                        <header>Exams 
                          <% if exam.errors.any? %>
                           <h4 style="text-decoration-color: red;">
                              <% exam.errors.full_messages.each do |message| %>
                              <%= message %>
                              <% end %>
                            </h4>
                          <% end %>
                        </header>
                        <div class="tools">
                          <a class="fa fa-repeat btn-color box-refresh" href="javascript:;"></a>
                          <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                          <a class="t-close btn-color fa fa-times" href="javascript:;"></a>
                        </div>
                      </div>
                      <div class="card-body ">
                        <div class="row">
                          <div class="col-md-6 col-sm-6 col-6">
                              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                <%= form.text_field :date,:class=>'form-control',:id=>'date',:placeholder=>'Enter date of exams...' %>
                                <label class="mdl-textfield__label">Date of Exams</label>
                              </div>

                              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-full-width">
                                <%= form.select(:examName,options_for_select([['Term 1','TM1'],['Term 2','TM2'],['Term 3','TM3']]),:class=>'mdl-textfield__input',:id=>'txtFirstName',:placeholder=>'Enter Name of exams...') %>
                                <label class="mdl-textfield__label">Term</label>
                              </div>
                          </div>
                          <div class="col-md-6 col-sm-6 col-6">
                            <div class="btn-group pull-right">
                              <a class="btn deepPink-bgcolor  btn-outline dropdown-toggle" data-toggle="dropdown">Tools
                                <i class="fa fa-angle-down"></i>
                              </a>
                              <ul class="dropdown-menu pull-right">
                                <li>
                                  <a href="javascript:;">
                                    <i class="fa fa-print"></i> Print </a>
                                </li>
                                <li>
                                  <a href="javascript:;">
                                    <i class="fa fa-file-pdf-o"></i> Save as PDF </a>
                                </li>
                                <li>
                                  <a href="javascript:;">
                                    <i class="fa fa-file-excel-o"></i> Export to Excel </a>
                                </li>
                              </ul>
                            </div>
                          </div>
                        </div>
                        <!-- input table -->
                        <form action="#" id="form_sample_1" class="form-horizontal" novalidate="novalidate">
                                            <div class="form-body">
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">Admin No
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :student_id,:placeholder=>'enter Admin number',:class=>'form-control input-height' %>
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">Math
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :math,:placeholder=>'enter Math results',:class=>'form-control input-height',:id=>'math' %>
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">English
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :english,:placeholder=>'enter English Results',:class=>'form-control input-height',:id=>'english' %>
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">Kiswahili
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :kiswahili,:placeholder=>'enter Kiswahili Results',:class=>'form-control input-height',:id=>'kiswahili' %>
                                                  
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">Science
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :science ,:placeholder=>'enter Science  Results',:class=>'form-control input-height',:id=>'science' %>
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">Social Studies
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :social_studies,:placeholder=>'enter Social Studies  Results',:class=>'form-control input-height',:id=>'social_studies' %>
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">CRE
                                                  <span class="required" aria-required="true"> * </span>
                                                </label>
                                                <div class="col-md-3">
                                                  <%= form.text_field :CRE,:placeholder=>'enter CRE  Results',:class=>'form-control input-height',:id=>'CRE' %>
                                                </div>
                                              </div>
                                              <div class="form-group row">
                                                <label class="control-label col-md-3">Total
                                                  <span class="required" aria-required="true"> * </span>
                                                </label><button class="btn btn-info btn-sm btn-info-outline" onclick="" type="button"> calculate</button>
                                                <div class="col-md-3">
                                                  <%= form.text_field :results,:class=>'form-control input-height',:id=>'results',readOnly:true %>
                                                </div>
                                              </div>
                                              <div class="form-actions">
                                                <div class="row">
                                                  <div class="offset-md-3 col-md-9">
                                                    <button type="submit" class="btn btn-primary m-r-20">Submit</button>
                                                    <button type="button" class="btn btn-default">Cancel</button>
                                                  </div>
                                                </div>
                                              </div>
                                            </div>
                                          </form>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="tab-pane" id="tab2">
                <div class="row">
                
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- end page content -->
<% end %>
<%= render 'dashboards/chat' %>
<%= render 'dashboards/footer' %>     
