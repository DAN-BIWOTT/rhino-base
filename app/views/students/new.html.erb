<%= render 'dashboards/hNavBar' %>
<%= render 'dashboards/vNavBar' %>
<!-- start page content -->
			<div class="page-content-wrapper">
				<div class="page-content">
					<div class="page-bar">
						<div class="page-title-breadcrumb">
							<div class=" pull-left">
								<div class="page-title">Add Student</div>
							</div>
							<ol class="breadcrumb page-breadcrumb pull-right">
								<li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
								</li>
								<li><a class="parent-item" href="">Student</a>&nbsp;<i class="fa fa-angle-right"></i>
								</li>
								<li class="active">Add Student</li>
							</ol>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 col-sm-12">
							<div class="card card-box">
								<div class="card-head">
									<header>Basic Information</header>
								</div><% if @student.errors.any? %>
								<% @student.errors.full_messages.each do |message| %> 
								<h2><%= message %> </h2>
								<% end -%>
								<% end -%>
								<div class="card-body" id="bar-parent">
		<%= form_with scope: :student,url: students_path,local: true do |form| %>				
									<form id="form_sample_1" class="form-horizontal">
										<div class="form-body">
											<div class="form-group row">
												<label class="control-label col-md-3">First Name
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

													<%= form.text_field :firstName,:placeholder=>'enter first name',:class=>'form-control input-height' %>

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Last Name
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

													<%= form.text_field :lastName,:placeholder=>'enter last name',:class=>'form-control input-height' %>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Email
												</label>
												<div class="col-md-5">
													<div class="input-group">
														<span class="input-group-addon">
															<i class="fa fa-envelope"></i>
														</span>

													<%= form.text_field :email,:class=>'form-control input-height',:placeholder=>'Email Address' %>
														 </div>
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Registration Date
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">
													<div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input2"
													 data-link-format="yyyy-mm-dd">

													<%= form.text_field :regDate,:class=>'form-control input-height date',size:'16', :placeholder=>'Registration Date',:id=>'date' %>	

														<span class="input-group-addon"><span class="fa fa-calendar"></span></span>
													</div>
													<input type="hidden" id="dtp_input2" value="" />
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Class
													<span class="required"> * </span>
												</label>

												<div class="col-md-5">


					<%= form.select(:sClass,options_for_select([['class 1','1'],['class 2','2'],['class 3','3'],['class 4','4'],['class 5','5'],['class 6','6'],['class 7','7'],['class 8','8'],['Nursury 1','9'],['Nursury 2','10'],['Nursury 3','11']]),:class => 'form-control input-height') %>								
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Gender
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

			<%= form.select(:gender,options_for_select([['Male','Male'],['Female','Female']]),:class=>'form-control input-height') %>	

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Mobile No.
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

								<%= form.number_field :mobileNumber,:class=>'form-control input-height',:placeholder=>'mobile number' %>

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Parents Name
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

								<%= form.text_field :parentName,:placeholder=>'enter parents name',:class=>'form-control input-height' %>

												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Parents Mobile No.
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

							<%= form.number_field :parentNumber,:class=>'form-control input-height',:placeholder=>'parents mobile number' %>						
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Date Of Birth
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">
													<div class="input-group date form_date " data-date="" data-date-format="dd MM yyyy" data-link-field="dtp_input5"
													 data-link-format="yyyy-mm-dd">

						<%= form.text_field :birth,:class=>'form-control input-height',:id=>'dateOfBirth',size:'16',:placeholder=>'date of Birth'  %>								
														<span class="input-group-addon"><span class="fa fa-calendar"></span></span>
													</div>
													<input type="hidden" id="dtp_input5" value="" />
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Address
													<span class="required"> * </span>
												</label>
												<div class="col-md-5">

									<%= form.text_area :address,:class=>'form-control-textarea',rows:'5',:placeholder=>'address' %>				
												</div>
											</div>
											<div class="form-group row">
												<label class="control-label col-md-3">Profile Picture
												</label>
												<div class="compose-editor">

								<%= form.file_field :image,:class=>'form-control default' %>					
												</div>
											</div><hr>
											<div class="form-actions">
												<div class="row">
													<div class="offset-md-3 col-md-9">
									<%= form.submit 'Submit',:class=>'btn btn-info m-r-20' %>
									<%= link_to 'Cancel',students_path,:class=>'btn btn-default' %>
													</div>
												</div>
											</div>
										</div>
						</form>
					<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!-- end page content -->
<%= render 'dashboards/chat' %>
<%= render 'dashboards/footer' %>